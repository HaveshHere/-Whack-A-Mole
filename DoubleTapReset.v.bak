module DoubleTapReset (
	input wire clk,
	input wire btn,
	output reg reset_pulse
);

	reg prev_btn;
	reg waiting_for_second = 0;
	reg [23:0] timer = 0;
	
	always @(posedge clk) begin
		reset_pulse <= 0;
		
		if (btn == 1 && prev_btn == 0) begin
		 if (!waiting_for_second) begin
			waiting_for_second <= 1; 
			timer <=0;
		 end else begin
			reset_pulse <= 1;
			waiting_for_second <= 0;
		 end
		end else if (waiting_for_second) begin
			if (timer < 25000000)
				timer <= timer + 1;
			else
				waiting_for_second <= 0;
		end
		
		prev_btn <= btn;
	  end
endmodule
